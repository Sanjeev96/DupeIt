<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.dhillon.dupeitv2.ResetPass_Activity">

    <Button
        android:id="@+id/btnSend"
        android:background="@color/LgnColor"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:text="Send Request"
        android:layout_above="@+id/btnBack"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvReset"
        android:textColor="@color/WhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:textSize="30dp"
        android:text="Reset Password"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/etEmail2"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textColor="@color/WhiteText"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/btnSend"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="66dp"
        android:text="Back"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnSend" />

    <TextView
        android:id="@+id/tvMessage"
        android:textColor="@color/WhiteText"
        android:background="@color/BlackText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="If you have an account and have forgtton your password please enter your email to receive a Password reset email." />
</RelativeLayout>
